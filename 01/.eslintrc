{
    "extends": "airbnb",
    "parser": "babel-eslint",
    "rules": {
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "jsx-a11y/anchor-is-valid": [ "error", {
            "components": [ "Link" ],
            "specialLink": [ "hrefLeft", "hrefRight" ],
            "aspects": [ "invalidHref", "preferButton" ]
          }],
        "max-len": ["error", { "ignoreComments": true, "ignoreStrings": true }],
        "linebreak-style": 0
    },
    "env": {
        "jest": true,
        "browser": true
    }
}
